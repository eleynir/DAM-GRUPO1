<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header con título y empresa -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/purple_50"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/tvTituloDetalle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Título del Puesto"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/purple_800" />

            <TextView
                android:id="@+id/tvEmpresaDetalle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre Empresa"
                android:textSize="18sp"
                android:textColor="@color/purple_500"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- Información rápida -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Fila 1: Salario y Modalidad -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Salario"
                            android:textSize="12sp"
                            android:textColor="@color/gray" />

                        <TextView
                            android:id="@+id/tvSalarioDetalle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="S/ 0.00 - S/ 0.00"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/green" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Modalidad"
                            android:textSize="12sp"
                            android:textColor="@color/gray" />

                        <TextView
                            android:id="@+id/tvModalidadDetalle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Modalidad"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/black" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Fila 2: Ubicación y Tipo -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Ubicación"
                            android:textSize="12sp"
                            android:textColor="@color/gray" />

                        <TextView
                            android:id="@+id/tvUbicacionDetalle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Ubicación"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/black" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Tipo"
                            android:textSize="12sp"
                            android:textColor="@color/gray" />

                        <TextView
                            android:id="@+id/tvTipoDetalle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Tipo"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/black" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Descripción -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descripción del puesto"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvDescripcionDetalle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descripción..."
            android:textSize="14sp"
            android:textColor="@color/black"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="24dp" />

        <!-- Detalles completos -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Detalles adicionales"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvDetalleCompleto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Detalles..."
            android:textSize="14sp"
            android:textColor="@color/black"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="32dp" />

        <!-- Botón Postular -->
        <Button
            android:id="@+id/btnPostular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Postular a esta oferta"
            android:backgroundTint="@color/green"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="32dp" />

    </LinearLayout>
</ScrollView>